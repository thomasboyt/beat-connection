{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2019",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "declaration": true,
    "typeRoots": ["node_modules/@types", "./types"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "pretty": true,
    "resolveJsonModule": true
  },
  "include": ["src", "test", "types"]
}
